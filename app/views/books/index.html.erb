<h1>Books</h1>

<!-- 一覧表示 -->

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>

			<tr>
				<td>
					<%= book.title %>
				</td>
				<td>
					<%= book.body %>
				</td>

				<!-- 各機能 -->

				<td>
					<%= link_to "show" , book_path(book.id) %>
					<%= link_to "edit", edit_book_path(book.id) %>
					<%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
				</td>

				<!-- ここまで -->

			</tr>

		<% end %>
	</tbody>
</table>

<!-- 一覧表示ここまで -->

<!-- 新規投稿フォーム -->

<h2> New book </h2>

<!-- エラー文 -->

<% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<!-- 投稿フォーム -->

<%= form_for(@book) do |f| %>

	<div class="field">
		<label for="book_title">Title</label>
		<br>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<label for="book_body">Body</label>
		<br>
	    <%= f.text_area :body %>
	</div>

	<div class="actions">
		<%= f.submit "Create Book" %>
	</div>

<% end %>